# STEP1 single attempt login

correct_username = "shreyadive@gmail.com"
correct_password = "svtechtales"

input_username = input('Username : ')
input_password = input('Password: ')

if correct_username == input_username and correct_password == input_password:
    print("Login successful")
else:
    print("Invalid credentials")

## STEP2 Add Retry Attempts (User gets 3 tries)

correct_username = "shreyadive@gmail.com"
correct_password = "svtechtales"

set_attempts = 0

while set_attempts < 3:
    input_username = input('Username : ')
    input_password = input('Password: ')
    if input_username == correct_username and input_password == correct_password:
        print('Login Successful')
        break
    else:
        print("Incorrect. Try again.")
        set_attempts += 1 

if set_attempts == 3:
    print("Account locked.")

# STEP 3 - Add a message that shows how many attempts are left

correct_username = "shreyadive@gmail.com"
correct_password = "svtechtales"

set_attempts = 0

while set_attempts < 3:
    input_username = input('Username : ')
    input_password = input('Password: ')
    
    if input_username == correct_username and input_password == correct_password:
        print('Login Successful')
        break
    else:
        set_attempts += 1
        print(f"Incorrect. Try again. Attempts left: {3 - set_attempts}")

if set_attempts == 3:
    print("Account locked.")


