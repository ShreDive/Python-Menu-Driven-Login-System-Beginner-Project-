# basic abnking system 

balance = 0
user_input = input("Do you want to deposit or withdraw?")

if user_input == "deposit" :
    amount = int(input("How much?"))
    balance = balance + amount 
elif user_input == "withdraw":
    amount = int(input("How much?"))
    if amount <= balance :
        balance = balance - amount  
    else: 
        print("Insufficient balance")
else :
    print("Invalid. Please choose correct option.") 

print(f"Final balance : {balance}")

# STEP 2: multi-operation banking app

name = input("Name : ")

balance = 0

while True:
    print(f"""
Hello {name}. What would you like to do?
1. Check balance
2. Deposit
3. Withdraw
4. Exit
""")

    user_input = int(input("Option : "))

    if user_input == 1:
        print(f"Your current balance is {balance}")

    elif user_input == 2:
        amount = int(input("How much? "))
        balance = balance + amount
        print(f"Final balance : {balance}") 

    elif user_input == 3:
        amount = int(input("How much? "))
        if amount <= balance:
            balance = balance - amount
            print(f"Final balance : {balance}")  
        else:
            print("Insufficient balance")

    elif user_input == 4:
        print("Exiting")
        break


